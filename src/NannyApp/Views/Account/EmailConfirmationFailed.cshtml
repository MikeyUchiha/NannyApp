@{
    ViewData["Title"] = "Email Confirmation Failed";
}

<h2>@ViewData["Title"]</h2>
<h2>The Account Is Not Authorized to Login</h2>
<form asp-controller="Account" asp-action="SendConfirmationMail" method="post" class="confirmform" role="form">
    <div>
        <p class="text-error">
            Your Email is not Verified. Please Check Your Email for Confirmation Link.
        </p>
        <p style="font-size:18px;">
            If You Have not Recieved a Confirmation Email, Please
            <input type="submit" class="btn btn-default" value="Send Verification Code" /> .<br />
            Thank You!
        </p>
    </div>
</form>